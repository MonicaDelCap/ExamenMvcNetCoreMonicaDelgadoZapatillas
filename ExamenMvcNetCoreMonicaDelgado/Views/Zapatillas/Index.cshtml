@model IEnumerable<ExamenMvcNetCoreMonicaDelgado.Models.Zapatilla>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                <a asp-controller="Zapatillas" asp-action="Detalles" asp-route-idzapatilla="@item.IdProducto">@item.Nombre</a>
            </td>
           
        </tr>
}
    </tbody>
</table>
